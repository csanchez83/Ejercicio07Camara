<?xml version='1.0' encoding='utf-8'?>
<widget id="io.cordova.hellocordova" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
  <name>Ejercicio 07 Camara</name>
  <description>
      Ejercicio 07 Camara en PhoneGap.
  </description>
  <author email="csanchez83@hotmail.com" href="http://cordova.io">
      Carlos Alberto Sanchez
  </author>
  <content src="index.html" />
  <plugin name="cordova-plugin-whitelist" spec="1" />
  <plugin name="cordova-plugin-device" spec="^1.1.0" /> 
  <plugin name="cordova-plugin-geolocation" spec="1" />
  <plugin name="cordova-plugin-dialogs" spec="1" />  
  <plugin name="cordova-plugin-device-motion" spec="1" />
  <plugin name="cordova-plugin-camera" spec="1" />
     
  <access origin="*" />
  <allow-intent href="http://*/*" />
  <allow-intent href="https://*/*" />
  <allow-intent href="tel:*" />
  <allow-intent href="sms:*" />
  <allow-intent href="mailto:*" />
  <allow-intent href="geo:*" />
  <platform name="android">
      <allow-intent href="market:*" />
  </platform>
  <platform name="ios">
      <allow-intent href="itms:*" />
      <allow-intent href="itms-apps:*" />
  </platform>
</widget>